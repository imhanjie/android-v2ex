<resources>

    <style name="BasicAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/widget_background_1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/widget_background_2</item>
    </style>

    <style name="BasicAppTheme.WhiteWindow">
        <item name="android:windowBackground">@color/widget_background_1</item>
    </style>

    <style name="CommandTabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="LoginEditText" parent="WidgetSingleLineEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">46dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginEnd">46dp</item>
        <item name="android:background">@drawable/bg_login_edit</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textColor">@color/widget_text_1</item>
        <item name="android:textColorHint">@color/widget_text_4</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MeTabMenuText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/widget_ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableEnd">@drawable/ic_item_right</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@color/widget_text_1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AboutTextItem">
        <item name="android:background">@drawable/widget_ripple_corner_5</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/widget_text_2</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
